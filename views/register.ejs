</head>

<body>
    <div class="center-main">
        <div class="center">
            <div class="Image">
                <div class="image2">
                    <img src="/images/dark.jpeg" alt="">
                </div>
            </div>
            <div class="login-side">
                <div class="items">
                    <h1>Welcome to<span> Register</span></h1>
                    <br>
                    <div class="btn">
                        <p>Create your account <a href="/login-page">login</a></p>
                        <div  class="forms">
                            <form class="input-container" action="/register"  method="post">
                                <input type="text" id="username" placeholder="Name" name="name"/>
                                <input type="email" id="username" placeholder="Email or Usename" name="email"/>
                                <input type="password" id="username" placeholder="Password" name="password"/>
                                <button class="boton-elegante" type="submit">
                                    <img src="/images/email.png" alt="email" width="30" class="invert">
                                    Register
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

